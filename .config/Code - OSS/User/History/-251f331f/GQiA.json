{
  "pyprland": {
    "plugins": [
      "scratchpads",
      "lost_windows", 
      "monitors",
      "toggle_dpms",
      "magnify",
      "expose",
      "shift_monitors",
      "workspaces_follow_focus"
    ]
  },
  "monitors": {
    "placement": {
      "topOf": "eDP-1"
    }
  },
  "workspaces_follow_focus": {
    "max_workspaces": 30
  },
  "expose": {
    "include_special": false
  },
  "scratchpads": {
    "term": {
      "animation": "fromTop",
      "command": "kitty --class kitty",
      "class": "kitty", 
      "size": "80% 80%"
    },
    "ranger": {
      "animation": "fromTop",
      "command": "kitty ranger",
      "class": "kitty",
      "size": "75% 75%",
      "lazy": true,
      "unfocus": "hide"
    }
  }
}
