{
  "pyprland": {
    "plugins": [
      "scratchpads",
      "lost_windows", 
      "monitors",
      "toggle_dpms",
      "magnify",
      "expose",
      "shift_monitors",
      "workspaces_follow_focus"
    ]
  },
  "monitors": {
    "placement": {
      "topOf": "eDP-1"
    }
  },
  "workspaces_follow_focus": {
    "max_workspaces": 30
  },
  "expose": {
    "include_special": false
  },
  "scratchpads": {
    "term": {
      "command": "kitty --clash scratchpad",
      "margin": 50
    },
    "ranger": {
      "command": "kitty --class scratchpad -e ranger",
      "margin": 50
    }
  }
}
